{% extends 'SzymonTurniejBundle::layout.html.twig' %}

{% block contents %}
    <h1>Edycja zawodnika</h1>

  <table>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <tr>
      <td>
        {{ form_label(form.imie) }}:
      </td><td>
        {{ form_widget(form.imie, { 'attr': {'class': 'form-control input-sm', 'placeholder': 'Imię zawodnika'} }) }}
      </td><td>
        {{ form_errors(form.imie) }}
      </td>
    </tr>
      
    <tr>
      <td>
        {{ form_label(form.nazwisko) }}:
      </td><td>
        {{ form_widget(form.nazwisko, { 'attr': {'class': 'form-control input-sm', 'placeholder': 'Nazwisko zawodnika'} }) }}
      </td><td>
        {{ form_errors(form.nazwisko) }}
      </td>
    </tr>
      
    <tr>
      <td>
        {{ form_label(form.rokUrodzenia) }}:
      </td><td>
        {{ form_widget(form.rokUrodzenia, { 'attr': {'class': 'form-control input-sm', 'placeholder': 'Rok'} }) }}
      </td><td>
        {{ form_errors(form.rokUrodzenia) }}
      </td>
    </tr>
      
    <tr>
      <td>
        {{ form_label(form.katSzachowa) }}:
      </td><td>
        {{ form_widget(form.katSzachowa, { 'attr': {'class': 'form-control input-sm', 'value': 0} }) }}
      </td><td>
        {{ form_errors(form.katSzachowa) }}
      </td>
    </tr>

    <tr>
    	<td></td>
      <td align=right>
       <a class="btn btn-default" href="{{ path('zawodnik') }}">
        Powróć do listy
       </a>
      {{ form_widget(form.submit, { 'label': 'Zapisz', 'attr': {'class': 'btn btn-success'} }) }}
      </td>
      <td></td>
    </tr>
    {{ form_end(form) }}
  </table>
  
  <br><br>
  {{ form_start(delete_form) }}
  {{ form_errors(delete_form) }}
  {{ form_widget(delete_form.submit, { 'label': 'Usuń', 'attr': {'class': 'btn btn-danger'} }) }}
  {{ form_end(delete_form) }}
{% endblock %}
